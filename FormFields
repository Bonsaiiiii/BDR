                  DropdownMenuItem(
                    value: '5V',
                    child: Text('5V'),
                  ),
                  DropdownMenuItem(
                    value: '9V',
                    child: Text('9V'),
                  ),
                  DropdownMenuItem(
                    value: '12V',
                    child: Text('12V'),
                  ),
                  DropdownMenuItem(
                    value: '15V',
                    child: Text('15V'),
                  ),
                  DropdownMenuItem(
                    value: '20V',
                    child: Text('20V'),
                  ),
                ],
                onChanged: (value) {
                  setState(() {
                    _selectedsaidaTenL = value; // Update the selected title
                  });
